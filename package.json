{
  "name": "proba-global",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "predev": "lsof -ti :3001,9002 | xargs kill -9 || true",
    "dev": "concurrently -n \"WEB,API\" -c \"blue,magenta\" \"npm run dev --workspace=apps/web\" \"npm run start:dev --workspace=apps/api\"",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "@types/animejs": "^3.1.13",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@vercel/speed-insights": "^1.3.1",
    "animejs": "^3.2.2",
    "gsap": "^3.14.2"
  },
  "overrides": {
    "glob": "^10.4.5",
    "rimraf": "^5.0.0",
    "eslint": "^9.0.0"
  }
}
